<h1>New Game Form</h1>
<%= form_for [@game] do |f| %>
  <% if @game.errors.present? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='field'>
    <%= f.label :platform %>
    <%= f.select :platform, @platform_collection %>
  </div>

  <div class='field'>
    <%= f.label :release_year, "Release Year" %>
    <%= f.text_field :release_year %>
  </div>

  <div class='field'>
    <%= f.submit value="Add this Game" %>
  </div>

<% end %>
